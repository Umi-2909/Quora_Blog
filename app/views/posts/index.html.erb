<div class="container">
  <p style="color: green"><%= notice %></p>
  <h3>Có gì mới</h3>
  <div id="posts">
    <% @posts.each do |post| %>
      <div id="<%= dom_id post %>">
        <p>
          <p style="font-size: 28px; font-weight: 300;"><%= post.title %></p>
        </p>
        <p>
          <%= post.body.truncate_words(100) %>
        </p>
        <button type="button" class="btn btn-primary" >
          <%= link_to "Read more", post, style:"color : white;"%>
        </button>
        <h6 style="padding: 16px 0;">
          <strong>
            <% if post.user.avatar.present? %>
              <%= image_tag(post.user.avatar, style:"width:32px; height: 32px; border-radius:100%") if post.user.avatar.attached? %>
            <% else %>
              <%= image_tag("default_avatar1/default_avatar.png", style:"width:32px; height: 32px; border-radius:100%") %>
            <% end %>
            <%= link_to post.user.name, user_path(post.user), style:"padding-right: 12px;" %>
          </strong>
          <strong>
            <%= post.created_at.strftime('%H:%M:%S, %d/%m/%Y') %>,
          </strong>
          <strong>
            <%= pluralize(post.views, "view") %>
          </strong>
        </h6>
      </div>
      <div style="border-bottom: 1px solid black;"></div>
    <% end %>
  </div>
</div>
