<% if current_user %>
  <li class="nav-item dropdown">
    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
      <% if current_user.avatar.present? %>
        <%= image_tag(current_user.avatar, style:"width:36px; height: 36px; border-radius:100%") %>
      <% else %>
        <%= image_tag("default_avatar1/default_avatar.png", style:"width:36px; height: 36px; border-radius:100%") %>
      <% end %>
      <%= current_user.name %>
    </a>
    <ul class="dropdown-menu dropdown-menu-lg-end" aria-labelledby="navbarDropdown">
      <li><%= link_to "Trang cá nhân",user_path(current_user.id), class:'dropdown-item' %></li>
      <li><%= link_to "Đăng bài",new_post_path, class:'dropdown-item' %></li>
      <li><%= link_to "Chỉnh sửa thông tin", edit_user_registration_path, class:'dropdown-item' %></li>
      <li><hr class="dropdown-divider"></li>
      <li><%= link_to "Đăng xuất", destroy_user_session_path, data: { turbo_method: :delete }, class:'dropdown-item'%></li>
    </ul>
  </li>
<% else %>
  <li class="nav-item">
    <%= link_to "Đăng nhập",new_user_session_path,class:'nav-link' %>
  </li>
  <li class="nav-item">
    <%= link_to "Đăng ký",new_user_registration_path,class:'nav-link'%>
  </li>
<% end %>
